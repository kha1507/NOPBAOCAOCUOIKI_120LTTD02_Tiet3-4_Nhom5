<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".Toi">

    <Button

        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="Xem thêm"
        android:textColor="#ffffff"
        android:background="#ff0000"
        android:drawableRight="@drawable/ic_search" >
    </Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000000"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/rev">
        </ImageView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tôi"
            android:background="#000000"
            android:textColor="#ffffff">
        </Button>

        <Button
            android:id="@+id/bt_thongtincanhan"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:text="Xem thông tin"
            android:textColor="#ffffff">
        </Button>

    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_discount_voucher"
        android:drawableRight="@drawable/ic_next"
        android:text="Ví Voucher">
    </Button>

    <Button
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_credit_card"
        android:drawableRight="@drawable/ic_next"
        android:text="Payment">
    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_history"
        android:drawableRight="@drawable/ic_next"
        android:text="Lịch sử đơn hàng">
    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_bill"
        android:drawableRight="@drawable/ic_next"
        android:text="Hóa đơn">
    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_reward_card"
        android:drawableRight="@drawable/ic_next"
        android:text="Reward Credits">
    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_chuquan"
        android:drawableRight="@drawable/ic_next"
        android:text="Ứng dụng cho chủ quán">
    </Button>

    <Button
        android:id="@+id/moibanbe"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_chat"
        android:drawableRight="@drawable/ic_next"
        android:text="Mời bạn bè">
    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_letter"
        android:drawableRight="@drawable/ic_next"
        android:text="Góp ý">
    </Button>

    <Button
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_question_mark"
        android:drawableRight="@drawable/ic_next"
        android:text="Chính sách quy định">
    </Button>

    <Button
        android:id="@+id/bt_caidat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_settings"
        android:drawableRight="@drawable/ic_next"
        android:text="Cài đặt">
    </Button>

    <Button
        android:id="@+id/button_DangXuat"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:textColor="#ff0000"
        android:text="Đăng xuất">
    </Button>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_trangchu"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:drawableTop="@drawable/ic_home"
            android:background="@drawable/button_footer"
            android:text="Home"
            />
        <Button
            android:id="@+id/btthongbao"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="32dp"
            android:drawableTop="@drawable/ic_thongbao"
            android:background="@drawable/button_footer"
            android:text="Thông báo"/>
        <Button
            android:id="@+id/bt_toi"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:drawableTop="@drawable/ic_toi"
            android:background="@drawable/button_footer"
            android:text="Tôi">
        </Button>

    </LinearLayout>

</LinearLayout>